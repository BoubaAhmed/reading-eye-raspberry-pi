# Environment variables for Reading Eye
# Copy this to .env and adjust values as needed

# OCR Configuration
OCR_LANGUAGE=fra+eng
TESSERACT_CMD=/usr/bin/tesseract
TESSDATA_PREFIX=/usr/share/tesseract-ocr

# Text-to-Speech Configuration
TTS_LANGUAGE=fr
TTS_RATE=150
TTS_VOLUME=0.9

# Camera Configuration
CAMERA_RESOLUTION=1280x720

# Paths
PROJECT_ROOT=/home/pi/reading_eye
CONFIG_FILE=/home/pi/reading_eye/config/reading_eye_config.json
LOG_DIR=/home/pi/reading_eye/logs

# Virtual Environment (auto-set by setup.sh)
VENV_NAME=env_projet_7
